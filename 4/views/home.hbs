<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Entregable 4</title>
    <link rel="stylesheet" href="/css/styles.css">
</head>

<body>

    <div class="container">
        <div class="list">
            <table class="table">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Titulo</th>
                        <th>Descripcion</th>
                        <th>Codigo</th>
                        <th>Precio</th>
                        <th>Stock</th>
                        <th>Categoria</th>
                    </tr>
                </thead>
                <tbody class="list__render" id="list__render">
                    {{!-- rendering products --}}
                </tbody>
            </table>
        </div>

        <div class="form__container">

            <div>
                <form id="form__add" class="form__add">

                    <div class="form__input__container">
                        <label for="title">Titulo</label>
                        <input type="text" id="title" required>
                    </div>

                    <div class="form__input__container">
                        <label for="description">Descripcion</label>
                        <input type="text" id="description" required>
                    </div>

                    <div class="form__input__container">
                        <label for="price">Precio</label>
                        <input type="number" id="price" required>
                    </div>

                    <div class="form__input__container">
                        <label for="stock">Stock</label>
                        <input type="number" id="stock" required>
                    </div>

                    <div class="form__input__container">
                        <label for="category">Categorias</label>
                        <input type="text" id="category" required>
                    </div>

                    <button type="submit" id="form__btn">Enviar</button>

                </form>
            </div>

            <div>

                <form class="form__delete" id="form__delete">
                    <div class="form__input__container">
                        <label for="delete">ID a eliminar</label>
                        <input type="number" id="delete" required>
                    </div>

                    <button type="submit" id="form__btn">Enviar</button>
                </form>

            </div>

        </div>
    </div>

    <script src="/socket.io/socket.io.js"></script>
    <script src="/js/main.js"></script>
</body>

</html>